@page
@model GokartBookingModel
@using BookingSystemRRC.Models
@{
    <h5 class="">Opret Booking</h5>
    <div class="row">
        <div class="col-3">
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.Booking.BookingNumber" class="control-label"><b class="text-white">Booking nr</b></label>
                    <input asp-for="@Model.Booking.BookingNumber" class="form-control" />
                    <span asp-validation-for="@Model.Booking.BookingNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Booking.NumberOfPeople" class="control-label "> <b class="text-white">Antal personer</b> </label>
                    <input asp-for="@Model.Booking.NumberOfPeople" class="form-control" />
                    <span asp-validation-for="@Model.Booking.NumberOfPeople" class="text-danger"></span>
                </div>
            </form>
        </div>
    </div>
}