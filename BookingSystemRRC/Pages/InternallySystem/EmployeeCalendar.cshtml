@page "{handler?}"
@model BookingSystemRRC.Pages.InternallySystem.EmployeeCalendarModel
@{
    

    <div class="calendar">

        <header>

            <div>
                <nav>
                    <button> Create Customer </button>
                    <a class="CalendarBTN" type="button" asp-page="/BookingRRC/CreateBooking"> Create Booking </a>
                    <button> Check in </button>
                </nav>
            </div>

            <div class="calendarTitle">

                
            </div>

        </header>

        <div class="container">
            <div class="row row-cols-4">

                <div class="col-3">
                    <h4 style="text-align:center">Mandag</h4>
                    @foreach (var bookings in @Model.bookings)
                    {
                        if (bookings.WeekDays == Models.TimeSlotBooking.DaysOfWeek.Mon)
                        {
                            <div class="card mb-3" style="max-width: 20rem">
                                <div class="card-header">
                                    <h5 class="card-title"> @bookings.BookingNumber </h5>
                                        <div class="card-body">
                                        <p class="card-text"> @bookings.BookingComment </p>
                                        </div>
                                </div>
                                    <div class="card-footer">
                                        <a class="btn" type="button" asp-page-handler="MoveBookingRight" asp-route-id="@bookings.BookingNumber"><i class="fa fa-arrow-circle-right"></i></a>
                                        <a style="float:right" class="btn" type="button" asp-page="BookingDetail" asp-route-id="@bookings.BookingNumber"><i class="fa fa-info-circle"></i></a>
                                    </div>
                            </div>
                        }
                    }
